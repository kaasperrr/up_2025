<UserControl x:Class="PaperFabrkia.Pages.MainPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PaperFabrkia.Pages"
             xmlns:model="clr-namespace:PaperFabrkia.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Width="200" FontFamily="Segoe Print" Content="Список материлов" Command="{Binding ShowMaterialPageCommand}" Margin="0 0 20 0"/>
            <Button Width="200" FontFamily="Segoe Print" Content="Список поставщиков" Command="{Binding ShowProviderPageCommand}"  Margin="0 0 20 0"/>
            <Button Width="200"  FontFamily="Segoe Print" Content="Добавить материал" Command="{Binding ShowCreateMaterialPageCommand}"/>
        </StackPanel>
        <Frame Grid.Row="1" NavigationUIVisibility="Hidden" Content="{Binding CurrentPage}"/>
    </Grid>
</UserControl>
